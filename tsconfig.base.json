{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tribu/audience": ["libs/audience/src/index.ts"],
      "@tribu/forms": ["libs/forms/src/index.ts"],
      "@tribu/home": ["libs/home/src/index.ts"],
      "@tribu/location-intelligence": [
        "shared/location-intelligence/src/index.ts"
      ],
      "@tribu/maps": ["libs/maps/src/index.ts"],
      "@tribu/surveys": ["libs/surveys/src/index.ts"],
      "@tribu/tables": ["libs/tables/src/index.ts"],
      "@tribu/targets": ["libs/targets/src/index.ts"],
      "@tribu/ui": ["libs/shared/ui/src/index.ts"],
      "@tribu/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
